# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Core_config = debug
  AOC_config = debug

else ifeq ($(config),release)
  Core_config = release
  AOC_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := Core AOC

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Core:
ifneq (,$(Core_config))
	@echo "==== Building Core ($(Core_config)) ===="
	@${MAKE} --no-print-directory -C . -f Core.make config=$(Core_config)
endif

AOC: Core
ifneq (,$(AOC_config))
	@echo "==== Building AOC ($(AOC_config)) ===="
	@${MAKE} --no-print-directory -C . -f AOC.make config=$(AOC_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f Core.make clean
	@${MAKE} --no-print-directory -C . -f AOC.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Core"
	@echo "   AOC"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"